<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.fis.ta.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Trading Application" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" id = "registrationUsername" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" id = "registrationPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="confirmPasswordField" id="registrationConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="firstNameField" id="registrationFirstName" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="lastNameField" id="registrationLastName" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="emailField" id="registrationEmail" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="phoneNumberField" id="registrationPhoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Text fx:id="registrationMessage" id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <Button onAction="#handleRegisterAction" id = "registrationRegisterButton" text="Register"/>
    </HBox>

    <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <Button onAction="#handleLoginAction" id ="registrationBackButton" text="Log in"/>
    </HBox>

</GridPane>
